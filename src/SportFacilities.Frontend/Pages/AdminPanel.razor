        @*             <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="NavigateToManageReservations"> *@
        @*                 Zarządzaj *@
        @*             </MudButton> *@
        @*         </MudCardContent> *@
        @*     </MudCard> *@
        @* </MudItem> *@
    </MudGrid>
</MudPaper>

@code {

    private void NavigateToManageFacilities()
    {
        Navigation.NavigateTo("/managefacilities");
    }

    private void NavigateToManageReservations()
    {
        Navigation.NavigateTo("/managereservations");
    }

}